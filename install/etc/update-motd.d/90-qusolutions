#!/bin/bash

YLW_B='\033[1;33m'
YLW='\033[0;33m'
GRN='\033[0;32m'
GRN_B='\033[1;32m'
NC='\033[0m' # No Color

echo "" > /etc/motd;
echo -e "${YLW_B}"
echo -e '
    ____                    _       _   _
   / __ \                  | |     | | (_)
  | |  | |_   _   ___  ___ | |_   _| |_ _  ___  _ __  ___ 
  | |  | | | | | / __|/ _ \| | | | | __| |/ _ \| `_ \/ __|
  | |__| | |_| | \__ \ (_) | | |_| | |_| | (_) | | | \__ \
   \___\_\\\__,_| |___/\___/|_|\__,_|\__|_|\___/|_| |_|___/
'
echo -e "${NC}"